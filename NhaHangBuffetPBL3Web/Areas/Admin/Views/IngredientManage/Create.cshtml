@model NhaHangBuffetPBL3.Models.Ingredient

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Thêm nguyên liệu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ingredient_id" class="control-label">Mã nguyên liệu</label>
                <input asp-for="Ingredient_id" class="form-control" />
                <span asp-validation-for="Ingredient_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient_name" class="control-label">Tên nguyên liệu</label>
                <input asp-for="Ingredient_name" class="form-control" />
                <span asp-validation-for="Ingredient_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stored_quantity" class="control-label">Số lượng dự trữ</label>
                <input asp-for="Stored_quantity" class="form-control" />
                <span asp-validation-for="Stored_quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order_quantity" class="control-label">Số lượng đặt hàng</label>
                <input asp-for="Order_quantity" class="form-control" />
                <span asp-validation-for="Order_quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="control-label">Đơn vị</label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
