@model NhaHangBuffetPBL3.Models.Ingredient

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model=>model.Ingredient_name)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên nguyên liệu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingredient_name)
        </dd>
        <dt class = "col-sm-2">
            Số lượng dự trữ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stored_quantity)
        </dd>
        <dt class = "col-sm-2">
            Số lượng đặt hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order_quantity)
        </dd>
        <dt class = "col-sm-2">
            Đơn vị
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Unit)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Ingredient_id">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại</a>
</div>
