@model NhaHangBuffetPBL3.Models.Food

@{
    ViewData["Title"] = "Create";
}
<h4>Tạo món</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodName" class="control-label">Tên món</label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Phân loại</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image_Url" class="control-label">Ảnh</label>
                <input asp-for="Image_Url" class="form-control" />
                <span asp-validation-for="Image_Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo món" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
