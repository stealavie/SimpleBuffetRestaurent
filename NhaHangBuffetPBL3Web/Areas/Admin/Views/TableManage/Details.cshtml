@model NhaHangBuffetPBL3.Models.Table

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bàn @Html.DisplayFor(model=>model.SeatingId)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Số lượng người
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfPeople)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SeatingId">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại</a>
</div>
