@model IEnumerable<NhaHangBuffetPBL3.Models.Table>

@{
    ViewData["Title"] = "Index";
}
    <p>
        <a asp-action="Create">Thêm bàn ăn</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Bàn</th>
                <th>
                    Trạng thái
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SeatingId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SeatingId">Chỉnh sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.SeatingId">Chi tiết</a> |
                        <a asp-action="Delete" asp-route-id="@item.SeatingId">Xóa bàn</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
